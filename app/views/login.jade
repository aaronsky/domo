extends ./base.jade
block append style
    link(rel="stylesheet", type="text/css", href="/stylesheets/style.css")
block body
  nav
    a(href="/login")
      img#logo(src="/images/face.png", alt="face logo")
    .navlink
      a(href="/login") Login
    .navlink
      a(href="/signup") Sign up
  section#login
    form#loginForm(class="mainForm", name="loginForm", action="/login", method="POST")
      label(for="username") Username: 
      input#user(type="text", name="username", placeholder="username")
      label(for="pass") Password: 
      input#pass(type="password", name="pass", placeholder="password")
      input(type="hidden", name="_csrf", value="#{csrfToken}")
      a#loginSubmit(class="formSubmit", href="#") Sign in
  #domoMessage
    img#speech(src="/images/speech.png", alt="speech box")
    h3
      span#errorMessage Wrong username or password
    img#domo(src="images/domo.png", alt="domo")
block scripts
    script(src="/javascripts/client.js")